<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/cdq"
            android:text="@string/cd"
            android:textSize="15sp" />

        <Button
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/dd"
            android:text="@string/dd"
            android:textColor="@drawable/btn_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/js"
            android:text="@string/js"
            android:textColor="@drawable/btn_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/yh"
            android:text="@string/yh"
            android:textColor="@drawable/btn_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/l6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_6"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c6" />

            <TextView
                android:id="@+id/text1_6"
                android:layout_width="115sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C6\t鱼香肉丝\t￥65" />

            <Button
                android:id="@+id/add1_6"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                 android:drawableTop="@drawable/car"
                 android:textSize="13sp"
                android:text="加入" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l6"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_7"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c7" />

            <TextView
                android:id="@+id/text1_7"
                android:layout_width="115sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C7\t炒空心菜\t￥15" />

            <Button
                android:id="@+id/add1_7"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                 android:background="#ffffff"
                 android:drawableTop="@drawable/car"
                 android:textSize="13sp"
                android:text="加入" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l7"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_8"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c8" />

            <TextView
                android:id="@+id/text1_8"
                android:layout_width="115sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C8\t鱼头豆腐汤\t￥68" />

            <Button
                android:id="@+id/add1_8"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                 android:background="#ffffff"
                 android:drawableTop="@drawable/car"
                 android:textSize="13sp"
                android:text="加入" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l8"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_9"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c9" />

            <TextView
                android:id="@+id/text1_9"
                android:layout_width="115sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C9\t一碗米饭\t￥8" />

            <Button
                android:id="@+id/add1_9"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                 android:background="#ffffff"
                 android:drawableTop="@drawable/car"
                 android:textSize="13sp"
                android:text="加入" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l9"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_10"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c10" />

            <TextView
                android:id="@+id/text1_10"
                android:layout_width="115sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C10\t\t天地一号\t￥6" />

            <Button
                android:id="@+id/add1_10"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                 android:background="#ffffff"
                 android:drawableTop="@drawable/car"
                 android:textSize="13sp"
                android:text="加入" />
        </LinearLayout>
        </LinearLayout>
     
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/linearLayout2"
         android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
      android:orientation="horizontal">

    <Button
        android:id="@+id/btns2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="上一页" />

   
    <Button
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_weight="3"
        android:text="查看点单" />
        </LinearLayout>
    

</RelativeLayout>
