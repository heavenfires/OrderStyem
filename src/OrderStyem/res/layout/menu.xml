<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/cdq"
            android:text="@string/cd"
            android:textSize="15sp" />

        <Button
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/dd"
            android:text="@string/dd"
            android:textColor="@drawable/btn_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/js"
            android:text="@string/js"
            android:textColor="@drawable/btn_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/yh"
            android:text="@string/yh"
            android:textColor="@drawable/btn_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_1"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c1" />

            <TextView
                android:id="@+id/text1_1"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C1\t红烧鱼\t￥88" />

            <Button
                android:id="@+id/add1_1"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/car"
                android:textSize="13sp"
                android:text="加入" />
            
            <Button
                android:id="@+id/delete1"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/sc"
                android:textSize="13sp"
                android:text="移除" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_2"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c2" />

            <TextView
                android:id="@+id/text1_2"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C2\t西红柿炒蛋\t￥25" />

            <Button
                android:id="@+id/add1_2"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/car"
                android:textSize="13sp"
                android:text="加入" />
             <Button
                android:id="@+id/delete2"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/sc"
                android:textSize="13sp"
                android:text="移除" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_3"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c3" />

            <TextView
                android:id="@+id/text1_3"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C3\t糖醋排骨\t￥76" />

            <Button
                android:id="@+id/add1_3"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/car"
                android:textSize="13sp"
                android:text="加入" />
             <Button
                android:id="@+id/delete3"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/sc"
                android:textSize="13sp"
                android:text="移除" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l3"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_4"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c4" />

            <TextView
                android:id="@+id/text1_4"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C4\t麻婆豆腐\t￥40" />

            <Button
                android:id="@+id/add1_4"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/car"
                android:textSize="13sp"
                android:text="加入" />
             <Button
                android:id="@+id/delete4"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/sc"
                android:textSize="13sp"
                android:text="移除" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l4"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1_5"
                android:layout_width="75sp"
                android:layout_height="60sp"
                android:src="@drawable/c5" />

            <TextView
                android:id="@+id/text1_5"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C5\t香菇炖鸡\t￥58" />

            <Button
                android:id="@+id/add1_5"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/car"
                android:textSize="13sp"
                android:text="加入" />
             <Button
                android:id="@+id/delete5"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/sc"
                android:textSize="13sp"
                android:text="移除" />
        </LinearLayout>
        </LinearLayout>
             
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="下一页" />
  
    <Button
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="查看菜单车" />
        </LinearLayout>
    

</RelativeLayout>