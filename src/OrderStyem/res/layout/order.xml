<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/cd"
            android:text="@string/cd"
            android:textColor="@drawable/btn_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/ddq"
            android:text="@string/dd"
            android:textSize="15sp" />

        <Button
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/js"
            android:text="@string/js"
            android:textColor="@drawable/btn_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:drawableTop="@drawable/yh"
            android:text="@string/yh"
            android:textColor="@drawable/btn_color"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/Cview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="3sp"
        android:textSize="18sp"
        android:text="您的菜单车：" />

 
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cview"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"      
         />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/l2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/l3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/l4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l3"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/l5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l4"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/l6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l5"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/l7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l6"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         />

  

    </LinearLayout>
     <LinearLayout
        android:id="@+id/l8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l7"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/l9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l8"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/l10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l9"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/C10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         />
    </LinearLayout>

     <Button
         android:id="@+id/clear"
         android:layout_width="wrap_content"
         android:layout_height="35sp"
         android:layout_alignRight="@+id/linearLayout1"
         android:layout_marginTop="1sp"
         android:textSize="13sp"
         android:text="清空菜单车" />

</RelativeLayout>